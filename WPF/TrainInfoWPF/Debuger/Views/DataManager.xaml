<Window x:Class="TrainInfoWPF.Debuger.DataManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainInfoWPF.Debuger"
        mc:Ignorable="d"
        Title="DataManager" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,5,0,5">
            <CheckBox x:Name="DoAutoGetCheckBox" Content="データを自動取得する"  Margin="5,5,5,5"/>
            <TextBox x:Name="StationIdTextBox" Text="駅IDを入力..." Margin="5,5,5,5" GotFocus="StationIdTextBox_GotFocus" />

            <Button x:Name="OpenJsonButton" Content="Jsonを開いてプレビューする..." Height="50" Margin="5,5,5,5" Click="OpenJsonButton_Click"/>
            <Button x:Name="SaveJsonButton" Content="現在の運行情報をJsonに保存する..."  Height="50" Margin="5,5,5,5" Click="SaveJsonButton_Click" />
            <Button x:Name="PreviewCurrentButton" Content="現在の運行情報をプレビューする..."  Height="50" Margin="5,5,5,5" Click="PreviewCurrentButton_Click" />
        </StackPanel>
    </Grid>
</Window>
